@model ProductSaveVM

<h1>Add Product</h1>

<div class="row">


        <form asp-action="Add" method="post" asp-controller="Products">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>

                    <br />
                    <div class="form-group">
                        <label asp-for="@Model.Stock"></label>
                        <input asp-for="@Model.Stock" class="form-control" />
                        <span asp-validation-for="@Model.Stock" class="text-danger"></span>
                    </div>
                    <br />

                    <div class="form-group">
                        <label asp-for="@Model.Price"></label>
                        <input asp-for="@Model.Price" class="form-control" />
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <br />

                    <div class="form-group">
                        <label asp-for="@Model.CategoryId"></label>

                        <select asp-for="@Model.CategoryId" asp-items="@(new SelectList(Model.CategoryVMs, nameof(CategoryVM.Id), nameof(CategoryVM.CategoryName)))" class="form-control"></select>

                    </div>
                    <br />
                    <div class="form-group">
                        <h4>Supplier(s) For This Product</h4>
                        @for (int i = 0; i < Model.SupplierVMs.Count(); i++)
                        {
                            <input type="checkbox" asp-for="@Model.SupplierVMs[i].isSelected" />
                            <label asp-for="@Model.SupplierVMs[i].isSelected">@Model.SupplierVMs[i].CompanyName</label>
                            <input type="hidden" asp-for="@Model.SupplierVMs[i].Id" />
                            <br />
                        }

                    </div>
                    <br />
                </div>
                <div class="col-md-6">
                <h4>Product Features</h4>

                    <div class="form-group">
                        <label asp-for="@Model.ProductFeatureSaveVM.MadeIn"></label>
                        <input asp-for="@Model.ProductFeatureSaveVM.MadeIn" class="form-control" />
                        <span asp-validation-for="@Model.ProductFeatureSaveVM.MadeIn" class="text-danger"></span>
                    </div>

                    <br />
                    <div class="form-group">
                        <label asp-for="@Model.ProductFeatureSaveVM.RealeseDate"></label>
                        <input type="date" asp-for="@Model.ProductFeatureSaveVM.RealeseDate" />
                        <span asp-validation-for="@Model.ProductFeatureSaveVM.RealeseDate" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="form-group">

                <input type="submit" value="Add Product" class="btn-primary" />

            </div>
        </form>





</div>